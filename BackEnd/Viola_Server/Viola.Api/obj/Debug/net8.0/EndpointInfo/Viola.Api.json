{
  "openapi": "3.0.1",
  "info": {
    "title": "Viola.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Authentication/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterCommand"
              }
